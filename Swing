    private void jRadioButton3ActionPerformed(java.awt.event.ActionEvent evt) {                                              
        // TODO add your handling code here:
         boolean termsAccepted = jRadioButton3.isSelected();

    // You can add additional logic based on the selection, if needed
    if (termsAccepted) {
        System.out.println("Terms and conditions accepted");
    } else {
        System.out.println("Terms and conditions not accepted");
    }
    }                                             

