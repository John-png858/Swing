    private void jTextField5ActionPerformed(java.awt.event.ActionEvent evt) {                                            
        // TODO add your handling code here:
         jTextField5.addKeyListener(new java.awt.event.KeyAdapter() {
        public void keyReleased(java.awt.event.KeyEvent evt) {
            if (evt.getKeyCode() == java.awt.event.KeyEvent.VK_ENTER) {
                // Perform action when Enter is pressed
                String text = jTextField5.getText();
                System.out.println("Entered Text in jTextField5: " + text);
                
                // You can perform additional actions based on the entered text
            }
        }
    });
    }                                           

    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:                                        
    // TODO add your handling code here:
    String name = jTextField1.getText();
    String mobile = jTextField2.getText();
    String gender = (jRadioButton1.isSelected()) ? "Male" : "Female";
    String dob = jComboBox2.getSelectedItem().toString() + "/" +
                 jComboBox3.getSelectedItem().toString() + "/" +
                 jComboBox4.getSelectedItem().toString();
    String address = jTextField3.getText();
    String contact = jTextField5.getText();

    // Perform any validation or additional processing if needed
    // ...

    // Display the values in the table (Assuming jTable1 is your table component)
    DefaultTableModel model = (DefaultTableModel) jTable1.getModel();
    model.addRow(new Object[]{name, mobile, gender, dob, address, contact});

    // Optional: Clear the input fields after submission
    jTextField1.setText("");
    jTextField2.setText("");
    jTextField3.setText("");
    jTextField5.setText("");
    jRadioButton1.setSelected(false);
    jRadioButton2.setSelected(false);
    jComboBox2.setSelectedIndex(0);
    jComboBox3.setSelectedIndex(0);
    jComboBox4.setSelectedIndex(0);


    }                                        

    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
          // TODO add your handling code here:
    jTextField1.setText("");
    jTextField2.setText("");
    jTextField3.setText("");
    jTextField5.setText("");
    jRadioButton1.setSelected(false);
    jRadioButton2.setSelected(false);
    jComboBox2.setSelectedIndex(0);
    jComboBox3.setSelectedIndex(0);
    jComboBox4.setSelectedIndex(0);

    // Clear the selection in the table (Assuming jTable1 is your table component)
    DefaultTableModel model = (DefaultTableModel) jTable1.getModel();
    model.setRowCount(0);
    }                                        

